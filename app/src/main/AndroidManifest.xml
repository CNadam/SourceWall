<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.nashlegend.sourcewall">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".AppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/BottomTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingActivity"
            android:label="@string/title_activity_setting"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.nashlegend.sourcewall.SettingActivity" />
        </activity>
        <activity
            android:name=".ShuffleGroupActivity"
            android:label="@string/shuffle_groups"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ShuffleTagActivity"
            android:label="@string/shuffle_tags"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ArticleActivity"
            android:label="@string/article"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PostActivity"
            android:label="@string/post"
            android:screenOrientation="portrait" />
        <activity
            android:name=".QuestionActivity"
            android:label="@string/question"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ReplyActivity"
            android:label="@string/title_activity_reply_article"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".AnswerActivity"
            android:label="@string/title_activity_answer"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SimpleReplyActivity"
            android:label="@string/title_activity_simple_reply"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PublishPostActivity"
            android:label="@string/title_activity_publish_post"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".SingleReplyActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_single_reply" />
        <activity
            android:name=".MessageCenterActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_message_center" />
        <activity
            android:name="net.nashlegend.sourcewall.ImageActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_image" />

        <activity
            android:name="net.nashlegend.sourcewall.TestActivity"
            android:label="@string/title_activity_test" />

        <meta-data
            android:name="UMENG_APPKEY"
            android:value="55018d1dfd98c583330009fd" />
        <meta-data
            android:name="UMENG_CHANNEL"
            android:value="${CHANNEL_NAME}" />
    </application>

</manifest>
